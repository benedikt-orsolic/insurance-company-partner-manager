@{Layout = "";}
@model Models.Dto.PartnerDetailsDisplayDto

<div class="modal-dialog modal-dialog-scrollable modal-xl modal-dialog-centered">
	<div class="modal-content">
		<div class="modal-header">
			<button 
				type="button"
				class="btn"
				onclick="(() => {
					event.stopPropagation();
					const modalElement = document.getElementById('PartnerDetailsModal');
					modalElement.innerHTML = '';
					modalElement.style.display = 'none';
				})()"
			>
				X
			</button>
		</div>
		<div class="modal-body">
			<table
				class="table table-responsive-xl table-striped table-hover table-bordered">
				<thead>
					<tr>
						<th>
							Full name
						</th>
						<th>
							Partner type
						</th>
						<th>
							Address
						</th>
						<th>
							Croatian pin ( OIB )
						</th>
						<th>
							Created at utc
						</th>
						<th class="vertical-text">
							Is foreign
						</th>
						<th>
							External code
						</th>
						<th>
							Partner number
						</th>
						<th class="vertical-text">
							Gender
						</th>
						<th>
							Created by
						</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							@Model.FullName
						</td>
						<td>
							@Model.PartnerTypeId
						</td>
						<td>
							@Model.Address
						</td>
						<td>
							@Model.CroatianPin
						</td>
						<td>
							@Model.CreatedAtUtc
						</td>
						<td>
							<input disabled
								type='checkbox'
								@(@Model.IsForeign==true
								? "checked='checked'"
								: "" )>
						</td>
						<td>
							@Model.ExternalCode
						</td>
						<td>
							@Model.PartnerNumber
						</td>
						<td>
							@Model.Gender
						</td>
						<td>
							@Model.CreatedByUser
						</td>
					</tr>
				</tbody>
			</table>

			<hr>
			<table class="table table-striped table-hover table-bordered">
				<thead>
					<tr>
						<th>Policy number</th>
						<th>Amount</th>
					</tr>
				</thead>
				<tbody>
					@if(Model.InsurancePolicyList != null) @foreach(var policy in Model.InsurancePolicyList) {
						<tr>
							<td>@policy.PolicyNumber</td>
							<td>@policy.Amount</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</div>
